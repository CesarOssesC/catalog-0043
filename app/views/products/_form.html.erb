      <%= form.collection_check_boxes(:category_ids, @categories, :id, :name) do |b| %>
        <div class="col-md-2">
          <span class="form-control my-2"><%= b.label {b.check_box + " " + b.text} %></span>
        </div>
      <% end %>
    </div>
  </div>

