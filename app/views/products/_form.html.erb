    <%= form.label :price, class:"form-label" %>
    <%= form.number_field :price, class:"form-control" %>
  </div>

  <div class="col-5">
    <%= form.label :size, class:"form-label" %>
    <%= form.number_field :size, class:"form-control" %>
  </div>

